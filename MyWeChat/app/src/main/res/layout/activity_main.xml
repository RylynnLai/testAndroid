<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rylynn.mywechat.MainActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/first_tab_name"
                    android:drawableTop="@mipmap/ic_action_account_balance"
                    android:textAllCaps="false"
                    android:background="@color/colorClear"
                    android:layout_marginTop="5dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/second_tab_name"
                    android:drawableTop="@mipmap/ic_action_account_balance_wallet"
                    android:textAllCaps="false"
                    android:background="@color/colorClear"
                    android:layout_marginTop="5dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/third_tab_name"
                    android:drawableTop="@mipmap/ic_action_accessibility"
                    android:textAllCaps="false"
                    android:background="@color/colorClear"
                    android:layout_marginTop="5dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/fourth_tab_name"
                    android:drawableTop="@mipmap/ic_action_account_circle"
                    android:textAllCaps="false"
                    android:background="@color/colorClear"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>>
        </LinearLayout>>



    </LinearLayout>>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rylynn.mywechat.TabBarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#eeeeee">

            <RelativeLayout
                android:id="@+id/firstItemLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/chatsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@mipmap/ic_action_account_balance"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorClear"
                    android:text="@string/first_tab_name"
                    android:textColor="@drawable/text_color_selector"
                    android:textAllCaps="false"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/secondItemLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/contactsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@mipmap/ic_action_accessibility"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorClear"
                    android:text="@string/second_tab_name"
                    android:textColor="@drawable/text_color_selector"
                    android:textAllCaps="false"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/thirdItemLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/discoverBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@mipmap/ic_action_account_balance_wallet"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorClear"
                    android:text="@string/third_tab_name"
                    android:textColor="@drawable/text_color_selector"
                    android:textAllCaps="false"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fourthItemLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/meBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@mipmap/ic_action_account_circle"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorClear"
                    android:text="@string/fourth_tab_name"
                    android:textColor="@drawable/text_color_selector"
                    android:textAllCaps="false"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
